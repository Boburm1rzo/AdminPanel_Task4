@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/reset.css" type="text/css">
</head>

<body>
    <div class="reset-container">

        <!-- Left Side -->
        <div class="left-side">
            <div class="left-content">
                <h1><i class="bi bi-key-fill"></i> Reset Password</h1>
                <p>Securely create a new password for your account</p>
            </div>
        </div>

        <!-- Right Side -->
        <div class="right-side">
            <div class="reset-box">

                <div class="reset-header">
                    <h2>New Password</h2>
                    <p>Please enter your new password below</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Please fix the errors below.
                    </div>
                }

                <form method="post">

                    <!-- Hidden fields from email link -->
                    <input type="hidden" asp-for="Input.Email" />
                    <input type="hidden" asp-for="Input.Token" />

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               placeholder="New Password">
                        <label>
                            <i class="bi bi-lock-fill me-2"></i>New Password
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               class="form-control"
                               placeholder="Confirm Password">
                        <label>
                            <i class="bi bi-lock-fill me-2"></i>Confirm Password
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-reset">
                        <i class="bi bi-check-circle-fill me-2"></i>Reset Password
                    </button>
                </form>

                <div class="back-link">
                    <p>Remembered your password? <a asp-page="/Account/Login">Go back</a></p>
                </div>

            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
